%h2 Listing posts
#index-table
  - @tags.each do |tag|
    = link_to tag.tag_text, tag_path(tag.id)
  - @users.each do |user|
    - @posts.each do |post|
      - if user.id == post.user_id
        
        .home-index-title
          %h1= post.title[0..120]

        #home-index-text
          = post.text[0..585]
          = link_to 'show post', user_post_path(post.user_id, post.id)

        #home-index-information
          %hr
          %span.post-show-author
            %strong Author:
            = user.email
          %span.post-show-created-at
            %strong Created at:
            = user.created_at.strftime("%d %b. %Y %T")
          %hr